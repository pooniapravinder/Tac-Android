<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100000px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/sort_video_layout"
        android:layout_width="100000dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumb_image"
            android:layout_width="@dimen/alivc_common_size_icon_70"
            android:layout_height="@dimen/alivc_common_size_icon_70"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/alivc_common_margin_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/alivc_common_margin_8"
            android:orientation="vertical">

        <TextView
            android:id="@+id/video_dir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/video_file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>

    <!--<ImageView-->
